<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.Bacon" parent="@style/Theme.AppCompat.Light">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.Bacon.Detail">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="EasyVocabularyTitleAppearance" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/detail_title_text_size</item>
    </style>

    <style name="EasyVocabularyBodyAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/detail_body_text_size</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="EasyVocabularyProgressAppearance" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/text_color_progress</item>
    </style>

    <style name="MainMenuCardViewAppearance">
        <item name="android:padding">@dimen/card_view_padding_text</item>
        <item name="android:textSize">@dimen/card_view_text_size</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">2</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="MainViewCardView">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="QuizViewCardView">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">@dimen/card_view_text_size</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/rounded_text_shape</item>
    </style>

</resources>
