<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sumitasharma.easyvocabulary">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".TimberApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".wordui.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".wordui.PreferenceActivity"
            android:label="Preference Settings"
            android:parentActivityName=".wordui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".wordui.MainActivity" />
        </activity>

        <provider
            android:name=".data.WordContentProvider"
            android:authorities="com.example.sumitasharma.easyvocabulary.data"
            android:exported="false" />

        <activity android:name=".wordui.PracticeWordsActivity" />
        <activity android:name=".wordui.WordQuizPracticeActivity" />
        <activity android:name=".wordui.ProgressActivity" />
        <activity android:name=".wordui.WordQuizSummaryActivity" />
        <activity android:name=".wordui.WordQuizAnswerActivity" />
        <activity android:name=".wordui.DictionaryActivity" />

        <service
            android:name=".services.WordDbPopulatorService"
            android:label="Word service"
            android:permission="android.permission.BIND_JOB_SERVICE">

        </service>
        <receiver android:name=".services.MyStartServiceReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>